<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="모임생성"
        android:textColor="#0064FF"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="341dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="40dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="모임명"
                    android:textColor="#0064FF"
                    android:textSize="18sp" />

                <EditText
                    android:id="@+id/editText_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:backgroundTint="#0064FF"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint="예) 토익스터디모임"
                    android:inputType="text"
                    android:textColor="#0064FF"
                    android:textColorHint="#7D8ED4" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="상세내용"
                    android:textColor="#0064FF"
                    android:textSize="18sp"  />

                <EditText
                    android:id="@+id/editText_comments"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:backgroundTint="#0064FF"
                    android:layout_gravity="bottom"
                    android:hint="예) 900점을 목표로 하고 LC위주로 학습"
                    android:textColor="#0064FF"
                    android:textColorHint="#7D8ED4" />
            </FrameLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="모임장소"
                    android:textColor="#0064FF"
                    android:textSize="18sp"  />

                <EditText
                    android:id="@+id/editText_where"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:backgroundTint="#0064FF"
                    android:ems="10"
                    android:layout_gravity="bottom"
                    android:hint=""
                    android:inputType="textPassword"
                    android:textColor="#0064FF"
                    android:textColorHint="#7D8ED4" />

                <Button
                    android:id="@+id/location_search"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_gravity="right|center"
                    android:backgroundTint="#0064FF"
                    android:text="위치검색"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:padding="1dp"
                    android:textSize="12sp"
                    tools:ignore="RtlCompat" />


            </FrameLayout>

        </LinearLayout>
        <TextView
            android:id="@+id/editText_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginBottom="3dp"
            android:text="모임일자"
            android:textColor="#0064FF"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="1dp"
                    android:orientation="horizontal">

                    <CheckBox
                        android:id="@+id/mondayCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="월" />

                    <CheckBox
                        android:id="@+id/tuesdayCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="화" />

                    <CheckBox
                        android:id="@+id/wednesdayCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="수" />

                    <CheckBox
                        android:id="@+id/thursdayCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="목" />

                    <CheckBox
                        android:id="@+id/fridayCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="금" />

                    <CheckBox
                        android:id="@+id/saturdayCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="토" />

                    <CheckBox
                        android:id="@+id/sundayCheckbox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="start|center_vertical"
                        android:text="일" />
                </LinearLayout>


            </LinearLayout>
        </LinearLayout>









        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top|left"
                    android:layout_marginBottom="34dp"
                    android:layout_marginLeft="8dp"
                    android:text="모집 인원 수"
                    android:textColor="#0064FF"
                    android:textSize="18sp"  />

                <EditText
                    android:id="@+id/editText_headcount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:inputType="number"
                    android:backgroundTint="#0064FF"
                    android:layout_gravity="bottom"
                    android:textColor="#0064FF" />
            </FrameLayout>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btnroomRegister"
        android:layout_width="180dp"
        android:layout_height="60dp"
        android:text="완료"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginBottom="45dp"
        android:backgroundTint="#0064FF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />







</androidx.constraintlayout.widget.ConstraintLayout>